{
  
  "name": "Legend of Zelda Background Extension",
  "description": "Decorate your Google site.",
  "version": "1.0", 
  "author": "Akarat",
  
  "manifest_version": 3,
  "icons": {},
  "permissions": ["tabs"],

  "action":{
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/ExtensionLogo.png"
    }
  },

  "content_scripts": [{
    "matches": ["https://www.google.com/*"],
    "js": ["main.js"]
  }]

}